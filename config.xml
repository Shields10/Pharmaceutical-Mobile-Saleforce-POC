<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Joint Fix</name>
    <description>
        Salesforce application for JointFix.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Benjamin Kilel
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
  <platform name="android">
	 <icon src="logo/logo.png" density="ldpi" />
	
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="logo/logo.png" width="180" height="180"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <plugin name="cordova-plugin-disable-ios11-statusbar" source="npm" spec="*"/>
        <preference name="webviewbounce" value="false" />
        <preference name="DisallowOverscroll" value="true" />

    </platform>
	<preference name="Orientation" value="portrait" />
     <preference name="StatusBarOverlaysWebView" value="true" />
      <preference name="StatusBarBackgroundColor" value="#01692e" />
</widget>
